div.columns
  div.column.col-12
    h4 Workspace

div.columns data-controller='workspace'
  div.colum.col-8.col-sm-12
    - @roots.each_with_index do |bit, index|
      div.accordion
        input id="accordion-#{index}" type="checkbox" name="accordion-checkbox" hidden=""
        label.accordion-header for="accordion-#{index}"
          - if (children = bit.children) && children.present?
            i.icon.icon-arrow-right.hide-sm
            i.icon.icon-arrow-right.float-right.show-sm
          - else
            i.icon.hide-sm
          =< link_to bit.title, bit
        div.accordion-body
          - children.each_with_index do |child, index|
            div.accordion
              input id="child-#{index}" type="checkbox" name="accordion-checkbox" hidden=""
              label.accordion-header for="child-#{index}"
                - if (grandchildren = child.children) && grandchildren.present?
                  i.icon.icon-arrow-right.hide-sm
                  i.icon.icon-arrow-right.float-right.show-sm
                - else
                  i.icon.hide-sm
                =< link_to child.title, child
              div.accordion-body
    div
      == pagy_spectre_nav(@pagy) if @pagy.pages > 1
  div.column.col-4.col-sm-12
    div.panel
      div.panel-nav
        ul.tab.tab-block
          li.tab-item.active data-target='workspace.tasksNav'
            = link_to "Tasks", '#', data: {action: 'workspace#tasksSelected'}
          li.tab-item data-target='workspace.calendarNav'
            = link_to "Calendar", '#', data: {action: 'workspace#calendarSelected'}
      div.panel-body data-target='workspace.tasks'
        - @tasks.each do |todo|
          div.tile.tile-centered.pt-2
            div.tile-icon
              = status_icon(todo)
            div.tile-content
              div.tile-title = link_to todo.title, todo
              - if todo.due_at.present?
                small.tile-subtitle
                  = "#{due_in_time_ago(todo)} at #{due_at_with_optional_time_zone(todo)}"
      div.panel-body.d-none data-target='workspace.calendar' data-action='workspace#calendarSelected'
        | Calendar
      div.panel-footer
